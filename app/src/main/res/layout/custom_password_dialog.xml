<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_background"
    android:gravity="center"
    android:padding="15dp"
    android:minWidth="300dp">

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_square_round_eb"
        android:text="비밀변호 변경"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanum_square_round_eb"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="변경할 비밀번호" />

    <EditText
        android:id="@+id/changePwET"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_custom"
        android:ems="10"
        android:hint="변경할 비밀번호"
        android:inputType="textPassword"
        android:padding="7dp"
        android:textSize="15sp"
        tools:ignore="Autofill,DuplicateSpeakableTextCheck,TextContrastCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanum_square_round_eb"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="변경할 비밀번호 확인" />

    <EditText
        android:id="@+id/changePwCheckET"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_custom"
        android:ems="10"
        android:hint="변경할 비밀번호 확인"
        android:inputType="textPassword"
        android:padding="7dp"
        android:textSize="15sp"
        tools:ignore="Autofill,DuplicateSpeakableTextCheck,TextContrastCheck,TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changeAcceptBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:backgroundTint="@color/blue"
            android:text="확인"
            android:textColor="@color/white"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changeCancelBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:backgroundTint="@color/red"
            android:text="취소"
            android:textColor="@color/white"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    </LinearLayout>

</LinearLayout>